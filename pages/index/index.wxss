.header-content {
  width: 100%;
  height: 60rpx;
  margin: 0 40rpx 0;
  padding: 0 40rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 60rpx;
  background: #f2f2f2;
}

.main-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f5f5f5;
}

.footer-content {
  width: 100%;
  height: 100%;
  background: #fff;
}

.main-content .content {
  height: 100%;
  --tabs-bottom-bar-color: #1890ff;
}

.main-content .content .van-tabs__content{
  height: calc(100% - 44px);
}