.header-wrap {
  background-color: #0960bd;
  color: #ffffff;
}

.main-content-header {
  display: flex;
  align-items: center;
  margin: 30rpx 50rpx;
}

.main-content-header .button image{
  width: 70rpx;
  height: 70rpx;
}

.header-content {
  margin: 0 40rpx 0;
}

.main-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f5f5f5;
}

.main-content .information {
  display: flex;
  align-items: center;
  margin: 0 20px 10px;
  height: 50px;
  background: #fff;
  border-radius: 8px;
}

.main-content .information-item {
  flex: 1;
  text-align: center;
}

.main-content .information-item:not(:last-of-type) {
  border-right: 1px solid #ddd;

}

.footer-content {
  width: 100%;
}